<%= form_for(@user,) do |f| %>

  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :name, t("label.form.edit.name") %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :email, t("label.form.edit.email") %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label :password, t("label.form.edit.password")%>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label :password_confirmation,t("label.form.edit.confirm") %>
  <%= f.password_field :password_confirmation, class: "form-control" %>

  <%= f.submit t("label.form.edit.submit"), class: "btn btn-primary" %>
<% end %>
