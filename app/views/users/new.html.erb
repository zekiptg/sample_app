<% provide(:title, t("title.signup")) %>
<h1><%= t("mainContent.signup") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :name, t("label.form.signup.name") %>
      <%= f.text_field :name %>

      <%= f.label :email, t("label.form.signup.email") %>
      <%= f.email_field :email %>

      <%= f.label :password, t("label.form.signup.pass") %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, t("label.form.signup.confirm") %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit t("label.form.signup.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
