<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("keywords.header.home"), root_path %></li>
        <li><%= link_to t("keywords.header.help"), helf_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("keywords.header.user"), "#" %></li
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t("keywords.header.account") %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("keywords.header.profile"), current_user %></li>
              <li><%= link_to t("keywords.header.settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                  <%= link_to t("keywords.header.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("keywords.header.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
