<% provide(:title, t("title.login")) %>
<h1><%= t("mainContent.login") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :email, t("label.form.signin.email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, t("label.form.signin.password") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.submit t("label.form.signin.submit"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t("subContent.singin.newUser") %>
      <%= link_to t("label.form.signin.signup"), signup_path %></p>
  </div>
</div>
