<%= form_for(@micropost) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("label.form.micropost.placeholder") %>
  </div>
  <%= f.submit t("label.form.micropost.submit"), class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png" %>
  </span>
<% end %>

<script type="text/javascript">
  $("#micropost_picture").bind("change", function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > <%= Settings.image.size.maximum%>) {
      alert(I18n.t("notify.alert.micropost.picture"));
    }
  });
</script>
